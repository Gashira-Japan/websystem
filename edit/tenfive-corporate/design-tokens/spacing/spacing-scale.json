{
  "name": "Spacing Scale",
  "description": "コーポレートサイト用スペーシングシステム",
  "version": "1.0.0",
  
  "scale": {
    "xs": {
      "value": "0.25rem",
      "px": "4px",
      "description": "最小スペース"
    },
    "sm": {
      "value": "0.5rem",
      "px": "8px",
      "description": "小スペース"
    },
    "md": {
      "value": "1rem",
      "px": "16px",
      "description": "基本スペース"
    },
    "lg": {
      "value": "1.5rem",
      "px": "24px",
      "description": "中スペース"
    },
    "xl": {
      "value": "2rem",
      "px": "32px",
      "description": "大スペース"
    },
    "2xl": {
      "value": "3rem",
      "px": "48px",
      "description": "特大スペース"
    },
    "3xl": {
      "value": "4rem",
      "px": "64px",
      "description": "巨大スペース"
    },
    "4xl": {
      "value": "6rem",
      "px": "96px",
      "description": "最大スペース"
    }
  },
  
  "components": {
    "container": {
      "padding": {
        "mobile": "1rem",
        "tablet": "1.5rem",
        "desktop": "2rem"
      },
      "maxWidth": {
        "mobile": "100%",
        "tablet": "768px",
        "desktop": "1200px"
      }
    },
    "section": {
      "padding": {
        "mobile": "2rem 0",
        "tablet": "3rem 0",
        "desktop": "4rem 0"
      }
    },
    "card": {
      "padding": "1.5rem",
      "margin": "0 0 1rem 0",
      "gap": "1rem"
    },
    "button": {
      "padding": {
        "small": "0.5rem 1rem",
        "medium": "0.75rem 1.5rem",
        "large": "1rem 2rem"
      }
    }
  },
  
  "grid": {
    "gap": {
      "mobile": "1rem",
      "tablet": "1.5rem",
      "desktop": "2rem"
    },
    "columns": {
      "mobile": 1,
      "tablet": 2,
      "desktop": 3
    }
  },
  
  "layout": {
    "header": {
      "height": "4rem",
      "padding": "0 1rem"
    },
    "footer": {
      "padding": "2rem 0"
    }
  }
}
