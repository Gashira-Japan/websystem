{
  "name": "Typography System",
  "description": "コーポレートサイト用タイポグラフィシステム",
  "version": "1.0.0",
  
  "fonts": {
    "primary": {
      "name": "Noto Sans JP",
      "fallback": "system-ui, -apple-system, sans-serif",
      "description": "メインの日本語フォント",
      "weights": [300, 400, 500, 600, 700]
    },
    "secondary": {
      "name": "Inter",
      "fallback": "system-ui, -apple-system, sans-serif",
      "description": "英数字・技術用語用フォント",
      "weights": [400, 500, 600, 700]
    },
    "monospace": {
      "name": "JetBrains Mono",
      "fallback": "Monaco, Consolas, monospace",
      "description": "コード・技術文書用フォント",
      "weights": [400, 500, 600]
    }
  },
  
  "typeScale": {
    "heading": {
      "h1": {
        "size": "2.5rem",
        "lineHeight": "1.2",
        "weight": "700",
        "description": "メインヘッドライン"
      },
      "h2": {
        "size": "2rem",
        "lineHeight": "1.3",
        "weight": "600",
        "description": "セクションヘッドライン"
      },
      "h3": {
        "size": "1.5rem",
        "lineHeight": "1.4",
        "weight": "600",
        "description": "サブセクションヘッドライン"
      },
      "h4": {
        "size": "1.25rem",
        "lineHeight": "1.4",
        "weight": "500",
        "description": "小見出し"
      },
      "h5": {
        "size": "1.125rem",
        "lineHeight": "1.5",
        "weight": "500",
        "description": "最小見出し"
      },
      "h6": {
        "size": "1rem",
        "lineHeight": "1.5",
        "weight": "500",
        "description": "カードタイトル"
      }
    },
    "body": {
      "large": {
        "size": "1.125rem",
        "lineHeight": "1.7",
        "weight": "400",
        "description": "リードテキスト"
      },
      "regular": {
        "size": "1rem",
        "lineHeight": "1.6",
        "weight": "400",
        "description": "本文テキスト"
      },
      "small": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "weight": "400",
        "description": "補足テキスト"
      }
    },
    "special": {
      "caption": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "weight": "400",
        "description": "キャプション・注釈"
      },
      "code": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "weight": "400",
        "fontFamily": "JetBrains Mono",
        "description": "インラインコード"
      },
      "codeBlock": {
        "size": "0.875rem",
        "lineHeight": "1.6",
        "weight": "400",
        "fontFamily": "JetBrains Mono",
        "description": "コードブロック"
      }
    }
  },
  
  "responsive": {
    "mobile": {
      "h1": "1.875rem",
      "h2": "1.5rem",
      "h3": "1.25rem",
      "h4": "1.125rem",
      "body": "1rem"
    },
    "tablet": {
      "h1": "2.25rem",
      "h2": "1.875rem",
      "h3": "1.5rem",
      "h4": "1.25rem",
      "body": "1rem"
    },
    "desktop": {
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "h4": "1.25rem",
      "body": "1rem"
    }
  },
  
  "usage": {
    "headings": "セクションの階層構造を明確にする",
    "body": "読みやすい本文テキストの提供",
    "special": "技術文書やコード表示での専門性を表現"
  }
}
